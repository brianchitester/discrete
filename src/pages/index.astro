---
import BaseLayout from '../layouts/BaseLayout.astro';
import LandingCards from '../components/shared/LandingCards.tsx';
import '../styles/global.css';
---

<BaseLayout title="Home">
  <section class="max-w-4xl mx-auto px-4 py-16 sm:py-24 text-center">
    <h1 class="text-4xl sm:text-5xl font-bold tracking-tight">
      Discrete Math, <span class="text-primary dark:text-primary-light">Visualized</span>
    </h1>
    <p class="mt-4 text-lg text-text-muted dark:text-text-dark-muted max-w-2xl mx-auto">
      Interactive playgrounds that turn abstract concepts into aha moments
    </p>
  </section>

  <section class="max-w-4xl mx-auto px-4 pb-16">
    <LandingCards client:load />
  </section>
</BaseLayout>
