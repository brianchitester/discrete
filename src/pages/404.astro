---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';
---

<BaseLayout title="Not Found">
  <div class="flex flex-col items-center justify-center min-h-[60vh] text-center px-4">
    <h1 class="text-8xl font-bold text-primary dark:text-primary-light">404</h1>
    <p class="text-xl text-text-muted dark:text-text-dark-muted mt-4">This page doesn't exist.</p>
    <a
      href="/"
      class="mt-8 inline-block px-6 py-3 rounded-lg bg-primary text-white font-medium hover:bg-primary-dark transition-colors"
    >
      Back to Home
    </a>
  </div>
</BaseLayout>
